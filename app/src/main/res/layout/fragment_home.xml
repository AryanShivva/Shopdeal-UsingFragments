<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="544dp"
        android:orientation="vertical">

        <android.widget.SearchView
            android:layout_width="410dp"
            android:layout_height="44dp"
            android:layout_marginEnd="1dp"

            android:background="@color/teal_200"
            android:queryHint="Search products"
            app:layout_constraintBottom_toTopOf="@+id/grid_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="186dp"

            android:src="@drawable/whatsapp_image_2023_05_04_at_12_01_41_am__1_" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="262dp"

            android:src="@drawable/whatsapp_image_2023_05_04_at_12_01_40_am" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="monospace"
            android:text="PRODUCT CATEGORIES"
            android:textSize="18dp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:background="#F3EA4E"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="126dp"
            android:layout_height="148dp"
            android:layout_margin="5dp"

            android:src="@drawable/whatsapp_image_2023_05_04_at_12_23_30_am__1_" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="126dp"
            android:layout_height="148dp"
            android:layout_margin="5dp"
            android:src="@drawable/whatsapp_image_2023_05_04_at_12_23_30_am" />


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="126dp"
            android:layout_height="148dp"
            android:layout_margin="5dp"
            android:src="@drawable/whatsapp_image_2023_05_04_at_12_23_30_am__2_" />

    </LinearLayout>


</FrameLayout>